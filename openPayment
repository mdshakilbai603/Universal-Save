    if (paymentChoice) {
        // এখানে তোমার আসল পেমেন্ট লিঙ্ক বা বিকাশ নাম্বার দিবে
        const myNumber = "01XXXXXXXXX"; 
        alert("Please Send Money to: " + myNumber + "\nReference: 'PRO'\n\nAfter payment, Shakil will verify and activate your account.");
        
        // যদি তোমার কোনো অটোমেটেড গেটওয়ে থাকে:
        // window.location.href = "https://your-payment-gateway-link.com";
    }
}
